
{% extends 'base.html.twig' %}
{% import 'macros.twig' as macros %}

{% block title %}Admin szerkesztése{% endblock %}

{% block body %}
{% if app.session.flashbag.has('success') %}
    {{ macros.flashMessage('success', app.session.flashbag.get('success')[0]) }}
{% endif %}
{% if app.session.flashbag.has('error') %}
    {{ macros.flashMessage('error', app.session.flashbag.get('error')[0]) }}
{% endif %}
    <div class="card w-50 mx-auto mt-5">
        <div class="card-body">
            <h3 class="card-title mb-5">
                {{ form_label(form.username, form.username.vars.value ~ ' szerkesztése', {'label_attr': {'class': 'form-label'}}) }}
            </h3>
            {{ form_start(form) }}
            <div class="form-group mb-3">
                {{ form_row(form.username, {'attr': {'class': 'form-control'}, 'label_attr': {'class': 'form-label'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_row(form.password, {'attr': {'class': 'form-control'}, 'label_attr': {'class': 'form-label'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_row(form.button, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            <div class="form-group mb-3">
                <a class="btn btn-danger" href="{{ path('app_admin_list') }}">Mégse</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}