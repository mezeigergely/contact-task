{% extends 'base.html.twig' %}

{% block title %}Ticketek{% endblock %}

{% block body %}
    <div class="card w-50 mx-auto mt-5">
        <div class="card-body">
            <h3 class="card-title mb-5">Ticketek</h3>
            <ol class="list-group list-group-numbered">
                {% for ticket in items %}
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">{{ ticket.name }}</div>
                        {{ ticket.message }}
                    </div>
                    <span class="badge bg-primary rounded-pill">{{ ticket.email }}</span>
                </li>
                {% endfor %}
            </ol>  
            <div class="pagination">{{ knp_pagination_render(items) }}</div>
        </div>
    </div>
{% endblock %}
