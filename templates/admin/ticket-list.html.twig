{% extends 'base.html.twig' %}

{% block title %}Ticketek{% endblock %}

{% block body %}
    <div class="card w-50 mx-auto mt-5">
        <div class="card-body">
            <h3 class="card-title mb-5">Ticketek</h3>
            <ol class="list-group list-group-numbered mb-3">
                {% for ticket in paginator %}
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <span class="badge bg-primary rounded-pill">{{ ticket.id }}</span>
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">{{ ticket.name }}</div>
                        <span class="badge bg-primary">{{ ticket.email }}</span>
                        <div><span>{{ ticket.message }}</span></div>
                    </div>
                </li>
                {% endfor %}
            </ol>
            {% include 'paginator/paginator.html.twig' %}
        </div>
    </div>
{% endblock %}
