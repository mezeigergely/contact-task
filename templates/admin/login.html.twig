{% extends 'base.html.twig' %}

{% block title %}Admin bejelentkezés{% endblock %}

{% block body %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form method="post">
    <div class="card w-50 mx-auto mt-5">
        <div class="card-body">
            <h3 class="card-title mb-5">Admin bejelentkezés</h3>
            <div class="form-group mb-3">
                <label class="form-label" for="inputUsername">Felhasználónév</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="form-group mb-3">
                <button class="btn btn-primary" type="submit">Belépés</button>
            </div>
        </div>
    </div>
</form>
{% endblock %}
