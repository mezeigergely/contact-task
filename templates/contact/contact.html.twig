{% extends 'base.html.twig' %}
{% import 'macros.twig' as macros %}

{% block title %}Kapcsolat{% endblock %}

{% block body %}
{% if app.session.flashbag.has('success') %}
    {{ macros.flashMessage('success', app.session.flashbag.get('success')[0]) }}
{% endif %}
{% if app.session.flashbag.has('error') %}
    {{ macros.flashMessage('error', app.session.flashbag.get('error')[0]) }}
{% endif %}
    <div class="card w-50 mx-auto mt-5">
    <div class="card-body">
        <h3 class="card-title mb-5">Kapcsolat</h3>
        {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}, 'label_attr': {'class': 'form-label'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}, 'label_attr': {'class': 'form-label'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(form.message, {'attr': {'class': 'form-control'}, 'label_attr': {'class': 'form-label'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(form.button, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}

